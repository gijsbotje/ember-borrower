<form {{action "save" on="submit"}} class="form">
  <h2>{{errorMessage}}</h2>
  <div class="form-group">
    <label for="firstname">
      First name
    </label>
    {{input value=model.firstName id="firstname" class="form-control" placeholder="First name"}}
  </div>
  <div class="form-group">
    <label for="lastname">
      Last name
    </label>
    {{input value=model.lastName id="lastname" class="form-control" placeholder="Last name"}}
  </div>
  <div class="form-group">
    <label for="email">
      Email
    </label>
    {{input value=model.email id="email" class="form-control" placeholder="Email"}}
  </div>
  <div class="form-group">
    <label for="twitter">
      Twitter
    </label>
    {{input value=model.twitter id="twitter" class="form-control" placeholder="Twitter"}}
  </div>
  <div class="row">
    <div class="col">
      <button {{action "cancel"}} class="btn btn-outline-danger btn-block">
        Cancel
      </button>
    </div>
    <div class="col">
      <input type="submit" value="Save" class="btn btn-success btn-block" />
    </div>
  </div>
</form>